import React from "react";
import { useState } from "react";

const init = 5;

//hasta aca el Counter empieza en 5 y cuando llega a 0 para
const Counter = () => {
  const [count, setCount] = useState(init);

  const handleTimer = () => {
    if (count <= 0) {
      setCount(init);
      console.log(count);
      return;
    } else {
      setCount(count - 1);
      console.log("count: ", count);
    }
  };

  return (
    <>
      <div>Counter</div>
      <p>{count}</p>
      <button onClick={handleTimer}>Empezar</button>
    </>
  );
};

export default Counter;

//funciona
const [count, setCount] = useState(init);

const handleTimer = () => {
  if (count <= 0) {
    setCount(init);
    console.log(count);
    return;
  } else {
    setCount((prevCount) => prevCount - 1);
    console.log("count: ", count);
  }
};
