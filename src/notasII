const [count, setCount] = useState(init);

  const restarAutomatico = () => {
    setInterval(() => {
      if (count <= 0) {
        setCount(init);
        return;
      } else {
        let newCount = count - 1;
        setCount(newCount);
      }
    }, 1000);
  };
